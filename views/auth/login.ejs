<div class="col-lg-6">
  <div class="p-5">
    <div class="text-center">
      <a href="/" style="text-decoration: none;"><h1 class="h4 text-gray-900"><b><%= title %></b></h1></a>
      <p class="text-gray-600">Welcome, let's learning!</p>
    </div>
    <form class="user" action="/auth/login" method="POST">
      <div class="form-group">
        <input type="email" name="email" class="form-control form-control-user" placeholder="Enter Email Address...">
      </div>
      <div class="form-group">
        <input type="password" name="password" class="form-control form-control-user" placeholder="Password">
      </div>
      <div class="form-group">
        <div class="custom-control custom-checkbox small">
          <input type="checkbox" class="custom-control-input" id="customCheck">
          <label class="custom-control-label" for="customCheck">Remember
            Me</label>
        </div>
      </div>
      <button type="submit" class="btn btn-primary btn-user btn-block">
        Login
      </button>
    </form>
    <hr>
    <!-- <div class="text-center">
      <a class="small" href="forgot-password.html">Forgot Password?</a>
    </div> -->
    <div class="text-center">
      <a class="small" href="/auth/register">Create an Account!</a>
    </div>
  </div>
</div>